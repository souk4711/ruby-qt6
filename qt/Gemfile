# frozen_string_literal: true

source "https://rubygems.org"

# Specify your gem's dependencies in qt.gemspec
gemspec

# ruby-qt6
%w[
  qtcore qtgui qtwidgets
  qtqml qtquick qtquickcontrols2 qtquickwidgets
  qtprintsupport qtuitools
].each do |lib|
  gem "ruby-qt6-#{lib}", path: "../#{lib}"
end

# ruby-qt6 - linux
%w[
  qtdbus
].each do |lib|
  next unless RUBY_PLATFORM.downcase.include?("linux")
  gem "ruby-qt6-#{lib}", path: "../#{lib}"
end

# rake
gem "irb"
gem "rake", "~> 13.0"

# lint
gem "rubocop"
gem "standard"

# test
gem "rspec"

# doc
gem "yard"
gem "redcarpet"

# lsp
gem "solargraph"
