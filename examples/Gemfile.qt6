# frozen_string_literal: true

source "https://rubygems.org"

%w[
  rice
  qtcore qtgui qtwidgets
  qtqml qtquick qtquickcontrols2 qtquickwidgets
  qtwebenginecore qtwebenginewidgets qtwebview
  qtprintsupport qtuitools
  qt
].each do |lib|
  gem_name = (lib != "qt" ? "ruby-qt6-#{lib}" : "ruby-qt6")
  gem gem_name, path: "../#{lib}"
end

%w[
  qtdbus
].each do |lib|
  next unless RUBY_PLATFORM.downcase.include?("linux")
  gem "ruby-qt6-#{lib}", path: "../#{lib}"
end
